{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],

    "module": "Node16",
    "moduleResolution": "node16",

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "types": ["node"]
  }
}
